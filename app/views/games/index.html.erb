<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.id %></td>
        <td><%= link_to 'Show', puzzle_game_path(@puzzle, game) %></td>
        <td><%= link_to 'Edit', edit_puzzle_game_path(@puzzle, game) %></td>
        <td><%= link_to 'Destroy', puzzle_game_path(@puzzle, game), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_puzzle_game_path(@puzzle) %>
