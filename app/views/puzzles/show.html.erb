<h1>Puzzle <%= @puzzle.id %></h1>

<table>
  <tbody>
    <% Puzzle::GRID_SIDE_LENGTH.times do |r| %>
      <tr>
        <% Puzzle::GRID_SIDE_LENGTH.times do |c| %>
          <td><%= @puzzle.grid[c + r * Puzzle::GRID_SIDE_LENGTH] %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', puzzles_path %>

<h2>Games:</h2>

<ul>
  <% @puzzle.games.each do |game| %>
    <li><%= link_to game.id, puzzle_game_path(@puzzle, game) %></li>
  <% end %>
</ul>

<%= link_to 'New', new_puzzle_game_path(@puzzle) %>
